---
import Layout from "../../layouts/Layout.astro";
import { LoginForm } from "../../components/auth/LoginForm";
import { Card, CardContent } from "@/components/ui/card";

// Get redirect parameter from URL
const redirectTo = Astro.url.searchParams.get("redirect") || "/";
---

<Layout showHeader={false}>
  <div class="container mx-auto flex min-h-screen items-center justify-center px-4 py-8">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight">10x Cards</h1>
      </div>

      <Card>
        <CardContent>
          <LoginForm client:load redirectTo={redirectTo} />
        </CardContent>
      </Card>
    </div>
  </div>
</Layout>
