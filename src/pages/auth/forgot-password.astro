---
import Layout from "../../layouts/Layout.astro";
import { ForgotPasswordForm } from "../../components/auth/ForgotPasswordForm";
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card";
---

<Layout showHeader={false}>
  <div class="container mx-auto flex min-h-screen items-center justify-center px-4 py-8">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="text-3xl font-bold tracking-tight">10x Cards</h1>
        <p class="mt-2 text-muted-foreground">Odzyskaj dostęp do konta</p>
      </div>

      <Card>
        <CardHeader>
          <CardTitle>Zapomniałeś hasła?</CardTitle>
          <CardDescription>Wyślemy Ci link do resetowania hasła</CardDescription>
        </CardHeader>
        <CardContent>
          <ForgotPasswordForm client:load />
        </CardContent>
      </Card>
    </div>
  </div>
</Layout>
